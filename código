<script>
    // ============================================
    // CONFIGURACI√ìN DE DATOS - EDITA ESTA SECCI√ìN
    // ============================================
    
    const casesData = {
        rehabilitacion: {
            title: "Rehabilitaci√≥n Compleja",
            icon: "üî¨",
            description: "Casos de rehabilitaci√≥n oral completa con tecnolog√≠a CAD/CAM",
            cases: [
                {
                    id: "rehab-001",
                    title: "Rehabilitaci√≥n Full Arch Superior",
                    description: "Dise√±o de arcada completa con 14 unidades cer√°micas sobre implantes. Workflow digital completo.",
                    image: "assets/cases/images/rehab-001.jpg", // Reemplaza con tu imagen
                    exocadFile: "assets/cases/exocad/rehab-001.html", // Reemplaza con tu archivo
                    driveLink: "https://drive.google.com/file/d/TU_ID_AQUI/view", // Reemplaza con tu link
                    material: "Zirconia",
                    units: "14 unidades"
                },
                {
                    id: "rehab-002",
                    title: "Caso de Pr√≥tesis H√≠brida",
                    description: "Pr√≥tesis h√≠brida atornillada con estructura de titanio y recubrimiento est√©tico en composite.",
                    image: "assets/cases/images/rehab-002.jpg",
                    exocadFile: "assets/cases/exocad/rehab-002.html",
                    driveLink: "https://drive.google.com/file/d/TU_ID_AQUI/view",
                    material: "Ti + Composite",
                    units: "Arcada completa"
                }
            ]
        },
        implantes: {
            title: "Barras e Implantes",
            icon: "‚öôÔ∏è",
            description: "Estructuras implantosoportadas y dise√±o de barras mecanizadas",
            cases: [
                {
                    id: "impl-001",
                    title: "Barra Multi-Unit de 6 Implantes",
                    description: "Barra fresada en titanio grado 5 con conexiones multi-unit anguladas para sobredentadura.",
                    image: "assets/cases/images/impl-001.jpg",
                    exocadFile: "assets/cases/exocad/impl-001.html",
                    driveLink: "https://drive.google.com/file/d/TU_ID_AQUI/view",
                    material: "Titanio G5",
                    units: "6 conexiones"
                }
            ]
        },
        ferulas: {
            title: "F√©rulas y Dispositivos",
            icon: "üõ°Ô∏è",
            description: "Dispositivos de protecci√≥n y ortopedia dental",
            cases: [
                {
                    id: "fer-001",
                    title: "F√©rula de Descarga Michigan",
                    description: "F√©rula oclusal de tipo Michigan con ajuste digital preciso y gu√≠as caninas optimizadas.",
                    image: "assets/cases/images/fer-001.jpg",
                    exocadFile: "assets/cases/exocad/fer-001.html",
                    driveLink: "https://drive.google.com/file/d/TU_ID_AQUI/view",
                    material: "PMMA",
                    units: "Arcada superior"
                }
            ]
        }
    };

    // ============================================
    // SISTEMA DE RENDERIZADO Y GESTI√ìN
    // ============================================

    let currentCategory = 'all';

    function renderCases() {
        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = '';

        Object.entries(casesData).forEach(([categoryKey, categoryData]) => {
            if (currentCategory !== 'all' && currentCategory !== categoryKey) return;

            const section = document.createElement('section');
            section.className = 'section';
            section.dataset.category = categoryKey;

            section.innerHTML = `
                <div class="section-header">
                    <h2 class="section-title">
                        <span class="section-icon">${categoryData.icon}</span>
                        ${categoryData.title}
                    </h2>
                    <p class="section-description">${categoryData.description}</p>
                </div>
                <div class="cases-grid" id="grid-${categoryKey}"></div>
            `;

            mainContent.appendChild(section);

            const grid = document.getElementById(`grid-${categoryKey}`);
            
            if (categoryData.cases.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üìÅ</div>
                        <p>No hay casos disponibles en esta categor√≠a</p>
                    </div>
                `;
                return;
            }

            categoryData.cases.forEach(caseItem => {
                const card = createCaseCard(caseItem, categoryKey);
                grid.appendChild(card);
            });
        });
    }

    function createCaseCard(caseData, category) {
        const card = document.createElement('div');
        card.className = 'case-card';

        const categoryLabels = {
            rehabilitacion: 'Rehabilitaci√≥n',
            implantes: 'Implantes',
            ferulas: 'F√©rulas'
        };

        card.innerHTML = `
            <div class="case-image">
                ${caseData.image ? 
                    `<img src="${caseData.image}" alt="${caseData.title}" onerror="this.parentElement.innerHTML='ü¶∑'">` : 
                    'ü¶∑'
                }
                <span class="case-badge">${categoryLabels[category]}</span>
            </div>
            <div class="case-content">
                <h3 class="case-title">${caseData.title}</h3>
                <p class="case-description">${caseData.description}</p>
                <div class="case-meta">
                    <div class="meta-item">
                        <span class="meta-icon">üíé</span>
                        <span>${caseData.material}</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-icon">üìê</span>
                        <span>${caseData.units}</span>
                    </div>
                </div>
                <div class="case-actions">
                    <button class="btn btn-primary" onclick="openViewer('${caseData.exocadFile}', '${caseData.title}')">
                        üîç Ver Dise√±o 3D
                    </button>
                    <a class="btn btn-secondary" href="${caseData.driveLink}" target="_blank">
                        üíæ Descargar CAD
                    </a>
                </div>
            </div>
        `;

        return card;
    }

    function openViewer(fileUrl, title) {
        const modal = document.getElementById('viewer-modal');
        const iframe = document.getElementById('modal-iframe');
        const modalTitle = document.getElementById('modal-title');

        modalTitle.textContent = title;
        iframe.src = fileUrl;
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeModal() {
        const modal = document.getElementById('viewer-modal');
        const iframe = document.getElementById('modal-iframe');

        modal.classList.remove('active');
        iframe.src = '';
        document.body.style.overflow = 'auto';
    }

    // Event Listeners
    document.addEventListener('DOMContentLoaded', () => {
        renderCases();

        document.querySelectorAll('.nav-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentCategory = btn.dataset.category;
                renderCases();
            });
        });

        // Cerrar modal con ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });

        // Cerrar modal al hacer click fuera
        document.getElementById('viewer-modal').addEventListener('click', (e) => {
            if (e.target.id === 'viewer-modal') closeModal();
        });
    });
</script>
